<Window x:Class="CepheusProjectWpf.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CepheusProjectWpf"
        mc:Ignorable="d"
        Title="Cepheus" Height="450" Width="800" Icon="Resources/logo_icon.png" KeyDown="Window_KeyDown">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="251*"/>
            <ColumnDefinition Width="532*"/>
            <ColumnDefinition Width="9*"/>
        </Grid.ColumnDefinitions>
        <Grid.Background>
            <ImageBrush ImageSource="Resources/night_sky.jpg"/>
        </Grid.Background>

        <Rectangle Grid.Column="1" Fill="{DynamicResource Blue}" Margin="0,9,0,40" Stroke="{DynamicResource Blue}"/>

        <Canvas x:Name="graphCanvas" Margin="1,10,1,40" Background="{StaticResource Dark}" MouseLeftButtonUp="graphCanvas_MouseLeftButtonUp" Grid.Column="1"/>
        <Rectangle Fill="{DynamicResource Blue}" Stroke="{DynamicResource Blue}" Grid.Column="1" Height="30" VerticalAlignment="Bottom" Margin="0,0,0,10"/>
        <TreeView Margin="10,10,0,147" Background="{DynamicResource Dark}" Foreground="White" BorderBrush="{DynamicResource Blue}" HorizontalAlignment="Left" Width="237">
            <TreeViewItem Header="Searching algorithms" Foreground="White">
                <TreeViewItem Header="Breadth-first search" Foreground="White"></TreeViewItem>
                <TreeViewItem Header="Depth-first search" Foreground="White"></TreeViewItem>
            </TreeViewItem>
            <TreeViewItem Header="Finding the shortest path" Foreground="White">
                <TreeViewItem Header="Dijkstra's algorithm" Foreground="White"></TreeViewItem>
                <TreeViewItem Header="Relaxation algorithm" Foreground="White"></TreeViewItem>
                <TreeViewItem Header="Bellman-Ford's algorithm" Foreground="White"></TreeViewItem>
                <TreeViewItem Header="Floyd-Warshall's algorithm" Foreground="White"></TreeViewItem>
            </TreeViewItem>
            <TreeViewItem Header="Minimum-spanning-tree algorithms" Foreground="White">
                <TreeViewItem Header="Jarnik's algorithm" Foreground="White"></TreeViewItem>
                <TreeViewItem Header="Boruvka's algorithm" Foreground="White"></TreeViewItem>
                <TreeViewItem Header="Kruskal's algorithm" Foreground="White"></TreeViewItem>
            </TreeViewItem>
            <TreeViewItem Header="Computing the maximum flow" Foreground="White">
                <TreeViewItem Header="Ford-Fulkerson's algorithm" Foreground="White"></TreeViewItem>
                <TreeViewItem Header="Dinic's algorithm" Foreground="White"></TreeViewItem>
                <TreeViewItem Header="Goldberg's algorithm" Foreground="White"></TreeViewItem>
            </TreeViewItem>
        </TreeView>
        <Button x:Name="btnRun" Content="Run" Grid.Column="1" Margin="0,0,0,10" BorderBrush="{DynamicResource Dark blue}" Background="{DynamicResource Blue}" Foreground="{DynamicResource Dark}" Height="30" VerticalAlignment="Bottom" HorizontalAlignment="Right" Width="78" Click="btnRun_Click"/>
        <Image x:Name="imgRun" Grid.Column="1" Margin="0,0,78,10" Source="Resources/run_icon.png" Height="30" VerticalAlignment="Bottom" HorizontalAlignment="Right" Width="30" MouseLeftButtonUp="imgRun_MouseLeftButtonUp"/>
        <Button x:Name="btnStepByStep" Content="Step by step" Grid.Column="1" Margin="0,0,108,10" BorderBrush="{DynamicResource Dark blue}" Background="{DynamicResource Blue}" Foreground="{DynamicResource Dark}" Height="30" VerticalAlignment="Bottom" HorizontalAlignment="Right" Width="78" Click="btnStepByStep_Click"/>
        <Image x:Name="imgStepByStep" Grid.Column="1" HorizontalAlignment="Right" Margin="0,0,186,10" Width="30" Source="Resources/step_by_step_icon.png" Height="30" VerticalAlignment="Bottom" MouseLeftButtonUp="imgStepByStep_MouseLeftButtonUp"/>
        <Button x:Name="btnClear" Content="Clear canvas" Grid.Column="1" Margin="0,0,216,10" BorderBrush="{DynamicResource Dark blue}" Background="{DynamicResource Blue}" Foreground="{DynamicResource Dark}" Height="30" VerticalAlignment="Bottom" HorizontalAlignment="Right" Width="78" Click="btnClear_Click"/>
        <Image x:Name="imgClear" Grid.Column="1" HorizontalAlignment="Right" Margin="0,0,294,10" Width="30" Source="Resources/clear_graph_icon.png" Height="30" VerticalAlignment="Bottom" MouseLeftButtonUp="imgClear_MouseLeftButtonUp"/>

    </Grid>
</Window>
