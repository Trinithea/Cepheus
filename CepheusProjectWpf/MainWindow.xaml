<Window x:Class="CepheusProjectWpf.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CepheusProjectWpf"
        mc:Ignorable="d"
        Title="Cepheus" Height="450" Width="800" Icon="Resources/logo_icon.png" KeyDown="Window_KeyDown">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="28*"/>
            <ColumnDefinition Width="75*"/>
            <ColumnDefinition Width="29*"/>
        </Grid.ColumnDefinitions>
        <Grid.Background>
            <ImageBrush ImageSource="Resources/night_sky.jpg"/>
        </Grid.Background>
        <Canvas x:Name="graphCanvas" Margin="1,10,1.373,10" Background="{StaticResource Dark}" MouseLeftButtonUp="graphCanvas_MouseLeftButtonUp" Grid.Column="1"/>
        <ComboBox Margin="10,36,10,0" Background="{DynamicResource Dark}" BorderBrush="{DynamicResource Aqua}" Foreground="White" Height="20" VerticalAlignment="Top"/>
        <local:PropertiesUserControl Grid.Column="2" Height="221" Margin="10,10,10,0" VerticalAlignment="Top" Width="Auto"/>

    </Grid>
</Window>
