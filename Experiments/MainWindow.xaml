<Window x:Class="Experiments.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Experiments"
        mc:Ignorable="d"
        Title="Cepheus" Height="450" Width="800" Background="#FF141422" WindowStartupLocation="Manual" Icon="logo_icon.png">
    <Window.BorderBrush>
        <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
            <GradientStop Color="Black" Offset="0"/>
            <GradientStop Color="#FF141422" Offset="1"/>
        </LinearGradientBrush>
    </Window.BorderBrush>
    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="night_sky.jpg"/>
        </Grid.Background>
        <Viewbox Margin="0,0,230,0">
            <Canvas >
                <Canvas.Background>
                    <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                        <GradientStop Color="Black" Offset="0"/>
                        <GradientStop Color="#FF14FFFF" Offset="1"/>
                        <GradientStop Color="#FF141422" Offset="1"/>
                    </LinearGradientBrush>
                </Canvas.Background>
            </Canvas>
        </Viewbox>

    </Grid>
</Window>
